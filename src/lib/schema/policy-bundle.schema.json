{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://evergreenos.dev/schemas/policy-bundle.json",
  "title": "PolicyBundle",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "orgId",
    "configuration"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "orgId": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "signature": {
      "type": "object",
      "required": [
        "status"
      ],
      "additionalProperties": false,
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "signed",
            "unsigned"
          ]
        },
        "signer": {
          "type": "string"
        }
      }
    },
    "configuration": {
      "type": "object",
      "required": [
        "apps",
        "updateChannel",
        "browser",
        "network",
        "security"
      ],
      "additionalProperties": false,
      "properties": {
        "apps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "id",
              "target"
            ],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "target": {
                "type": "string",
                "enum": [
                  "all",
                  "group"
                ]
              },
              "groupIds": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "allOf": [
              {
                "if": {
                  "properties": {
                    "target": {
                      "const": "group"
                    }
                  }
                },
                "then": {
                  "required": [
                    "groupIds"
                  ]
                }
              }
            ]
          }
        },
        "updateChannel": {
          "type": "string",
          "enum": [
            "stable",
            "beta",
            "dev"
          ]
        },
        "browser": {
          "type": "object",
          "required": [
            "homepageUrl",
            "allowPopups"
          ],
          "additionalProperties": false,
          "properties": {
            "homepageUrl": {
              "type": "string",
              "minLength": 1
            },
            "allowPopups": {
              "type": "boolean"
            }
          }
        },
        "network": {
          "type": "object",
          "required": [
            "wifiNetworks"
          ],
          "additionalProperties": false,
          "properties": {
            "wifiNetworks": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": [
                  "ssid",
                  "security"
                ],
                "additionalProperties": false,
                "properties": {
                  "ssid": {
                    "type": "string",
                    "minLength": 1
                  },
                  "security": {
                    "type": "string",
                    "enum": [
                      "wpa2",
                      "wpa3"
                    ]
                  }
                }
              }
            }
          }
        },
        "security": {
          "type": "object",
          "required": [
            "diskEncryption",
            "lockAfterMinutes"
          ],
          "additionalProperties": false,
          "properties": {
            "diskEncryption": {
              "type": "boolean"
            },
            "lockAfterMinutes": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    }
  }
}